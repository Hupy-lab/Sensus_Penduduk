<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Aplikasi Sensus Penduduk"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/input_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Masukan Data Diri Anda"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/tprovinsi"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Provinsi"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/tkota"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kota"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/tkecamatan"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kecamatan"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/tkelurahan"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Kelurahan"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/trt"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RT"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/trw"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="RW"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/tjml_kel"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jumlah Kepala Keluarga"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />
    <EditText
        android:id="@+id/tjumlah_rt"
        style="@android:style/Widget.Holo.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Jumlah Penduduk RT"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textColor="@android:color/black" />



    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@android:color/white"
        android:text="Simpan Data"
        android:textColor="#99ff99"
        android:textSize="16dp"
        android:textStyle="bold|italic" />


</LinearLayout>